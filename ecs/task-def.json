{
  "family": "echo-playground",
  "taskDefinition": "echo-playground",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "executionRoleArn": "arn:aws:iam::your_account_id:role/ecsTaskExecutionRole", // Replace with your actual role ARN
  "cpu": "256", // Adjust as needed
  "memory": "512", // Adjust as needed
  "containerDefinitions": [
    {
      "name": "echo-playground",
      "image": "<aws_account_id>.dkr.ecr.<region>.amazonaws.com/echo-playground:latest",
      "cpu": 128,
      "memory": 256, // This should be less than the task's memory
      "essential": true,
      "portMappings": [
        {
          "containerPort": 1323
        }
      ]
    }
  ]
}
